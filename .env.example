# Goal Tracker Environment Variables
# Copy this file to .env and update the values

# Path to the Goals directory (relative to project root or absolute path)
# This is where your Obsidian goal files are stored
VITE_GOALS_PATH=../Goals

# Obsidian Local REST API (optional - for future Obsidian integration)
VITE_OBSIDIAN_API_URL=http://localhost:27124
VITE_OBSIDIAN_API_KEY=

# Development mode - set to true to use mock data instead of real files
VITE_USE_MOCK_DATA=false
